<h3><%= link_to "+ Add New Story", new_story_path %></h3>
<%= form_tag '/', method: :get do %>
  <%= search_field_tag :q, params[:q] %>
  <%= submit_tag "Search" %>
<% end %>

<ul>
<% @stories.each do |story| %>
  <li>
    <h3><%= link_to story.title, story.link %></h3>
    <p>
      <b>Upvotes</b>: <%= story.upvotes %> ||
      <b>Category</b>: <%= story.category %> ||
      <%= link_to "Delete", story_path(story.id), method: 'delete' %>
    </p>
  </li>
<% end %>
</ul>
